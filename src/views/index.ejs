<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', { title: 'Inicio' }) %>

<body>
  <!-- Header -->
  <%- include('partials/headerNavbar') %>
  <!-- /Header -->

  <!-- Banner -->
  <div class="banner"></div>
  <!-- /Banner -->

  <div class="container products-wrapper">
    <div class="row">
      <div class="col-12">
        <h2 class="products-title">Productos</h2>
      </div>

      <!-- All products -->
      <div class="col-12 col-sm-6 col-lg-3">
        <section class="product-box">
          <figure class="product-box_image">
            <img src="/images/products/jordan.jpg" alt="Nike Jordan">
          </figure>
          <article class="product-box_data">
            <h2>$16500</h2>
            <p>Nike Jordan</p>
            <i class="fas fa-truck"></i>
          </article>
          <div class="button-buy-container">
            <form action="/detail" method="GET">
              <input type="hidden" name="img" value="jordan.jpg">
              <input type="hidden" name="title" value="Nike Jordan">
              <input type="hidden" name="price" value="16500">
              <input type="hidden" name="unit" value="1">
              <button type="submit" class="mercadopago-button">Ir al producto</button>
            </form>
          </div>
        </section>
      </div>

    </div>
  </div>

  <!-- footer -->
  <%- include('partials/footer') %>
  <!-- /footer -->
</body>

</html>